<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:id="@+id/cardViewListaClientes"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:dividerHeight="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="15dp"
        android:id="@+id/relativeListaClientes">

        <TextView
            android:id="@+id/txtNombreCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="67dp"
            android:layout_marginRight="267dp"
            android:text="Linea 1"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/txtCorreoCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNombreCliente"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="272dp"
            android:text="Linea 2"
            android:textSize="17dp"
            android:textColor="@color/color_heder">

        </TextView>

        <TextView
            android:id="@+id/txtTelefonoCliente"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_below="@+id/txtCorreoCliente"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="272dp"
            android:text="Linea 2"
            android:textSize="14dp"
            android:textColor="@color/design_default_color_primary_dark">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtTelefonoCliente"
            android:background="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/icono_borrar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_borrar" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>