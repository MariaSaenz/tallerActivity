<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fragmente">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/reclieviewMecanicos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/recicleview"
            android:padding="4dp"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/lblIdAdministrador"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10dp"/>

            <FrameLayout
                android:id="@+id/fragment_continerMecanico"
                android:layout_width="match_parent"
                android:layout_height="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btGuardarMecanico"
                        android:layout_width="160dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/button_rounder"
                        android:text="Guardar"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.876"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtContrasena"
                        android:visibility="invisible"/>


                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre Mecánico:"
                    android:layout_marginLeft="5sp"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20dp"
                    />

                    <EditText
                        android:id="@+id/lblNombreMecanicoRegistro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="NOMBRE CLIENTE"
                        android:textSize="18dp"
                        android:backgroundTint="@color/color_heder"
                        android:layout_margin="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correo electrónico:"
                        android:layout_marginLeft="5sp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20dp"
                        />
                    <EditText
                        android:id="@+id/lblCorreoMecanicioRegistro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CORREO@MECANICO.COM"
                        android:textSize="18dp"
                        android:backgroundTint="@color/color_heder"
                        android:layout_margin="20dp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telefono :"
                        android:layout_marginLeft="5sp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/lblTelefonoMecanicoRegistro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="099555444"
                        android:textSize="18dp"
                        android:backgroundTint="@color/color_heder"
                        android:layout_margin="20dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contraseña:"
                        android:layout_marginLeft="5sp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20dp" />
                    <EditText
                        android:id="@+id/lblContrasenaMecanicoRegistro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="!contr@5en@"
                        android:textSize="18dp"
                        android:backgroundTint="@color/color_heder"
                        android:layout_margin="20dp"/>


                </LinearLayout>


            </FrameLayout>


    </LinearLayout>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/grupoFabMecanico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="56dp"
        app:fab_addButtonColorNormal="@color/color_heder"
        app:fab_addButtonColorPressed="@color/color_tolbar"
        app:fab_labelStyle="@style/etiqueta">

        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:id="@+id/idFabActualizarMecanico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_icon="@android:drawable/ic_menu_rotate"
            app:fab_size="normal"
            app:fab_title="Actualizar">

        </com.getbase.floatingactionbutton.AddFloatingActionButton>
        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:id="@+id/idFabNuevoMecanico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_icon="@android:drawable/ic_input_add"
            app:fab_size="normal"
            app:fab_title="Nuevo">

        </com.getbase.floatingactionbutton.AddFloatingActionButton>

        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:id="@+id/idFabSalirMecanico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_icon="@android:drawable/ic_input_add"
            app:fab_size="normal"
            app:fab_title="Salir">

        </com.getbase.floatingactionbutton.AddFloatingActionButton>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>