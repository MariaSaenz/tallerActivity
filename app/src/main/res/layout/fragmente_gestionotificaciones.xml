<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fragmente"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reclieviewListaNotificacionesEnviadas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/recicleview"
        android:padding="4dp"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>
    <TextView

        android:id="@+id/idadministradorNotificacionesAdministrador"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="10dp"/>
    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/grupoFabNotificaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="56dp"
        app:fab_addButtonColorNormal="@color/color_heder"
        app:fab_addButtonColorPressed="@color/color_tolbar"
        app:fab_labelStyle="@style/etiqueta">

        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:id="@+id/idFabNuevaNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_icon="@android:drawable/ic_menu_rotate"
            app:fab_size="normal"
            app:fab_title="Nueva NotificaciÃ³n">

        </com.getbase.floatingactionbutton.AddFloatingActionButton>
        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:id="@+id/idFabSalirNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_icon="@android:drawable/ic_menu_rotate"
            app:fab_size="normal"
            app:fab_title="Salir">

        </com.getbase.floatingactionbutton.AddFloatingActionButton>
    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>